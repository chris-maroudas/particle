.article-mashup
  .article-data
    %p.article-category
      - article.categories.each do |category|
        = link_to category.name, category, class: "category"
    %p.author
      = " by #{article.user.name.titleize}"

  %h3.article_title
    = link_to article.title, article
  %p.article-preview
    = article.preview.capitalize

  = image_tag article.image_url(:full), class: "article-image"

  .article_content
    = raw(truncate_html(article.content, length: 300, omission: "..."))
  = link_to "Read more", article, class: "read-more"